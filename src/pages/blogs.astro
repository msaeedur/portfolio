---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { siteConfig } from "../config";
import "../styles/global.css";
const base = import.meta.env.BASE_URL;

// Sample blog posts - you can replace this with your actual blog data
const blogPosts = [
  {
    title: "Getting Started with Arabic Speech Recognition",
    excerpt: "Building lightweight speech recognition systems for Arabic language with minimal resources and maximum efficiency.",
    date: "2024-12-15",
    readTime: "5 min read",
    slug: "arabic-speech-recognition",
    tags: ["AI", "Speech Recognition", "Arabic", "Machine Learning"]
  },
  {
    title: "Explainable AI in Computer Vision",
    excerpt: "How we implemented explainable AI methods like GradCAM and SHAP for rail track semantic segmentation at Siemens.",
    date: "2024-11-20",
    readTime: "8 min read",
    slug: "explainable-ai-computer-vision",
    tags: ["Computer Vision", "Explainable AI", "Deep Learning", "Safety"]
  },
  {
    title: "MLOps Best Practices for Production",
    excerpt: "Lessons learned from deploying machine learning models in production environments with AWS and Docker.",
    date: "2024-10-10",
    readTime: "6 min read",
    slug: "mlops-best-practices",
    tags: ["MLOps", "AWS", "Docker", "Production"]
  }
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Blog posts by Muhammad Saeed Ur Rehman on AI, Machine Learning, and Software Engineering" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />
    <title>Blogs - {siteConfig.name}</title>
  </head>
  <body>
    <Header />
    <main class="min-h-screen bg-white pt-20">
      <div class="mx-auto max-w-6xl px-6 py-16 lg:px-8">
        <!-- Header Section -->
        <div class="text-center mb-16">
          <h1 class="text-4xl font-bold text-gray-900 mb-4">Blog</h1>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Thoughts and insights on AI, Machine Learning, and Software Engineering
          </p>
        </div>

        <!-- Coming Soon Message -->
        <div class="text-center mt-16 p-8 bg-gray-50 rounded-lg">
          <h3 class="text-2xl font-semibold text-gray-900 mb-4">More Posts Coming Soon</h3>
          <p class="text-gray-600 max-w-md mx-auto">
            I'm working on more in-depth articles about AI, machine learning, and software engineering. 
            Stay tuned for updates!
          </p>
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>