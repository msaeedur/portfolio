---
import { siteConfig } from "../config";

const testimonials = [
  {
    name: "Dr. Stefan Kluckner",
    title: "Head of R&D, Computer Vision and Graphics Applications",
    company: "Siemens Mobility GmbH",
    quote: "I had the pleasure of working with Muhammad for two years at Siemens Mobility. He consistently delivered high-quality AI and computer vision solutions, significantly improving model robustness and explainability for large-scale obstacle detection. His technical expertise, reliability, and commitment to best practices made him an invaluable member of our team. Any organization would benefit greatly from his contributions.",
    avatar: "SK",
    logo: "/portfolio/logos/siemens_logo.png",
    logoAlt: "Siemens Mobility"
  },
  {
    name: "Sabina Dick",
    title: "ELM Specialist",
    company: "Roche Diabetes Care Deutschland GmbH",
    quote: "Muhammad consistently demonstrated focus, creativity, and professionalism during his time with us at Roche. He developed tools to streamline data workflows, automated processes, and provided clear, effective solutions to complex problems. His communication skills, teamwork, and innovative approach ensured outstanding results, making him a trusted and highly capable contributor to our projects.",
    avatar: "SD",
    logo: "/portfolio/logos/roche_logo.jpg",
    logoAlt: "Roche Diabetes Care"
  },
  {
    name: "Dr. Haytham Mones",
    title: "Founder",
    company: "Quranlingo",
    quote: "After weeks of brainstorming and combining creative ideas, we're launching a huge update to our app. Together with Muhammad Saeed Ur Rehman, our 'AI genius,' we designed a lightweight and powerful solution that works on older devices, gives fast feedback, and required minimal resources. Huge thanks to Muhammad for his brillianceâ€”this is just the beginning!",
    avatar: "HM",
    logo: "/portfolio/logos/quranlingo_logo.jpeg",
    logoAlt: "Quranlingo"
  }
];
---

<section id="testimonials" class="p-8 sm:p-12 md:p-16 lg:p-24 bg-gray-50">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        What Colleagues Say
      </h2>
      <div
        class="w-[75px] h-[5px] mx-auto rounded-full"
        style={`background-color: ${siteConfig.accentColor}`}
      >
      </div>
      <p class="text-lg text-gray-600 mt-6 max-w-2xl mx-auto">
        Trusted by industry leaders and colleagues across top organizations
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-12">
      {testimonials.map((testimonial) => (
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-lg transition-all duration-300 group">
          <!-- Company Logo Header -->
          <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-4 border-b border-gray-100">
            <div class="flex items-center justify-between">
              <!-- Conditionally render Quranlingo branding OR default logo -->
              {testimonial.company === "Quranlingo" ? (
                <div class="flex items-center gap-2">
                  <img 
                    src={testimonial.logo} 
                    alt="Quranlingo"
                    class="h-6 md:h-7 w-auto opacity-80 group-hover:opacity-100 transition-opacity duration-300"
                  />
                  <span class="text-sm md:text-base font-semibold text-gray-800">Quranlingo</span>
                </div>
              ) : (
                <img 
                  src={testimonial.logo} 
                  alt={testimonial.logoAlt || `${testimonial.company} logo`}
                  class="h-6 md:h-7 w-auto opacity-80 group-hover:opacity-100 transition-opacity duration-300"
                />
              )}

              <!-- Quote Icon -->
              <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
                <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z"/>
              </svg>
            </div>
          </div>

          <!-- Card Content -->
          <div class="p-6 flex flex-col justify-between">
            <!-- Quote Text -->
            <blockquote class="text-gray-700 text-sm md:text-base leading-snug mb-4 italic line-clamp-6">
              "{testimonial.quote}"
            </blockquote>

            <!-- Author Info -->
            <div class="text-right mt-auto pt-4 border-t border-gray-100">
              <div class="font-bold text-gray-900 text-base mb-2">
                {testimonial.name}
              </div>
              <div class="text-gray-600 text-sm font-medium leading-relaxed mb-1">
                {testimonial.title}
              </div>
              <div class="text-gray-500 text-sm font-semibold">
                {testimonial.company}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Trust Indicators -->
    <div class="mt-16 text-center">
      <div class="text-gray-500 font-semibold text-lg mb-8">Also worked with:</div>
      <div class="flex flex-wrap justify-center items-center gap-8 lg:gap-12 opacity-70">
        <!-- Siemens Logo -->
        <div class="grayscale hover:grayscale-0 transition-all duration-300">
          <img 
            src="/logos/siemens_logo.png" 
            alt="Siemens Mobility" 
            class="h-8 md:h-10 w-auto"
          />
        </div>
        
        <!-- Roche Logo -->
        <div class="grayscale hover:grayscale-0 transition-all duration-300">
          <img 
            src="/logos/roche_logo.jpg" 
            alt="Roche Diabetes Care" 
            class="h-8 md:h-10 w-auto"
          />
        </div>
        
        <!-- Quranlinqo Logo -->
        <div class="grayscale hover:grayscale-0 transition-all duration-300">
          <img 
            src="/logos/quranlingo_logo.jpeg" 
            alt="Quranlingo" 
            class="h-8 md:h-10 w-auto"
          />
        </div>
        
        <!-- Alfred Wegener Institute Text (no logo available) -->
        <div class="grayscale hover:grayscale-0 transition-all duration-300">
          <img 
            src="/logos/awi_logo.jpg" 
            alt="AWI" 
            class="h-8 md:h-10 w-auto"
          />
        </div>
      </div>
    </div>
  </div>
</section>